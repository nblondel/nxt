<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="1"
    android:gravity="center">
    <ImageView android:layout_width="wrap_content" android:src="@drawable/resumelabyrinthe" android:layout_height="wrap_content" android:layout_marginBottom="20dp"></ImageView>
    
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content" android:gravity="center">
	    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge" android:text="X:   "></TextView>
	    <Spinner android:layout_width="100dp" android:id="@+id/spinnerX" android:layout_height="40dp" android:prompt="@string/xprompt"></Spinner>
    </LinearLayout>
    
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content" android:gravity="center">
	    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge" android:text="Y:   "></TextView>
	    <Spinner android:layout_width="100dp" android:id="@+id/spinnerY" android:layout_height="40dp" android:prompt="@string/yprompt"></Spinner>
    </LinearLayout>
    
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content" android:gravity="center">
	    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textAppearance="?android:attr/textAppearanceMedium" android:text="Orientation:   "></TextView>
	    <Spinner android:layout_width="200dp" android:id="@+id/spinnerOrientation" android:layout_height="40dp" android:prompt="@string/orientationprompt"></Spinner>
    </LinearLayout>
    
    <Button android:text="OK" android:id="@+id/buttonChoiceOk" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>

</LinearLayout>